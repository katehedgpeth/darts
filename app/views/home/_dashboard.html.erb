<%= javascript_include_tag params[:controller] %>
<%= stylesheet_link_tag params[:controller] %>


<div class="container">
	<h1 class="welcome">Welcome Back, <%= @name %>!</h1>
	<div class="metrics">
		<div class="metric-row">
			<div id="hit-pct" class="metric">
				<h2><%= @hit_pct %></h2>
				<p>Hit Percentage</p>
			</div>
			<div id="total-thrown" class="metric">
				<h2><%= @total_shots %></h2>
				<p>Total Darts Thrown</p>
			</div>
		</div>
		<div class="metric-row">
			<div id="best-shot" class="metric">
				<h2><%= @best_shot %></h2>
				<p>Your Best Shot</p>
			</div>
			<div id="worst-shot" class="metric">
				<h2><%= @worst_shot %></h2>
				<p>Your Worst Shot</p>
			</div>
		</div>
	</div>
	<div class="buttons">
		<h1 class="practice"><%= link_to "Start a New Practice Session", 'practice#new', { class: "btn-primary"} %></h1>
		<h2><%= link_to "Sign Out", 'login#destroy', { class: "btn", method: "delete" } %></h2>
	</div>




</div>